<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Highest: Fridge $5.5"
        android:id="@+id/graph_panel_avg"
        android:background="@android:color/holo_purple"
        android:textAppearance="@style/TextAppearence.TextInputLayout.White"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/graph_panel_peak"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="120dp" />

    <TextView
        android:text="Lowest: Lights $2.1"
        android:id="@+id/graph_panel_peak"
        android:background="@android:color/holo_green_light"
        android:textAppearance="@style/TextAppearence.TextInputLayout.White"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/graph_panel_avg"
        android:layout_toEndOf="@+id/graph_panel_avg"
        android:textAllCaps="true" />

    <TextView
        android:text="You Saved: $11.92"
        android:id="@+id/textView6"
        android:background="@android:color/holo_orange_light"
        android:textAppearance="@style/TextAppearence.TextInputLayout.White"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginBottom="28dp"
        android:layout_height="50dp"
        android:layout_above="@+id/radargraph"
        android:layout_toRightOf="@+id/graph_panel_peak"
        android:layout_toEndOf="@+id/graph_panel_peak"
        android:layout_width="120dp"
        android:textAllCaps="true" />

    <com.github.mikephil.charting.charts.RadarChart
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:id="@+id/radargraph"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></com.github.mikephil.charting.charts.RadarChart>

</RelativeLayout>