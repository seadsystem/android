<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.seads.seadsv2.device_panel_page.DeviceAndRoomStatsActivity"
    tools:showIn="@layout/activity_device_panel_main">
    <android.support.v4.view.ViewPager
        android:id="@+id/pager_rooms_and_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabs_rooms_and_devices"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_rooms_and_devices"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        app:tabMode="fixed"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:tabGravity="fill"
        app:tabTextColor="@color/text_title"
        app:tabIndicatorColor="@color/indicator"
        app:tabSelectedTextColor="@color/indicator"
        android:layout_alignParentBottom="true"
        />
</android.support.constraint.ConstraintLayout>
