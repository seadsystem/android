<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seads.seadsv3"
    android:versionCode="3"
    android:versionName="SEADS V1.02"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/seads"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name="com.seads.seadsv3.SplashActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.seads.seadsv3.WelcomeActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.seads.seadsv3.LoginActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.seads.seadsv3.SignupActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.seads.seadsv3.main_menu.MainMenuActivity"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name="com.seads.seadsv3.device_panel_page.DeviceAndRoomStatsActivity"
            android:label="@string/title_activity_device_panel_main"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.seads.seadsv3.AboutActivity"
            android:screenOrientation="sensorPortrait" />
        <activity android:name="com.seads.seadsv3.overview_page.Overview_Page"></activity>
    </application>

</manifest>